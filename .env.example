# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-here

# OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# File Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Payment Processing (Stripe)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Premium Subscription Price (in cents)
PREMIUM_PRICE=899

# File Upload Limits
MAX_FILE_SIZE=50000000  # 50MB
ALLOWED_FILE_TYPES=audio/mpeg,audio/wav,audio/flac

# Rate Limiting
RATE_LIMIT_WINDOW=15    # 15 minutes
RATE_LIMIT_MAX=100      # 100 requests per window

# Cache Configuration
CACHE_TTL=3600          # 1 hour in seconds

# Security
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=your-session-secret-here
COOKIE_SECRET=your-cookie-secret-here

# Logging
LOG_LEVEL=debug
LOG_FILE=app.log

# Email Service (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@harmonymusic.com

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=harmony_music
DB_USER=your-db-username
DB_PASS=your-db-password

# Redis Configuration (if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# CDN Configuration (if needed)
CDN_URL=https://cdn.harmonymusic.com
CDN_API_KEY=your-cdn-api-key
CDN_API_SECRET=your-cdn-api-secret

# Analytics (if needed)
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_OAUTH=true
ENABLE_FILE_UPLOAD=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# API Versions
API_VERSION=v1
LEGACY_API_SUPPORT=false

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We'll be back soon!"

# Debug
DEBUG_MODE=false
DEBUG_PAYMENT=false
DEBUG_OAUTH=false
